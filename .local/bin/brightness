#!/bin/sh

path="/sys/class/backlight/intel_backlight"
max=$(cat "$path/max_brightness")
step=$(($max / 10))
min=$step
brightness=$(cat "$path/brightness")

if [ "$1" = "+" ]
then
	brightness=$(($brightness + $step))
	if [ $brightness -gt $max ]
	then
		brightness=$max
	fi
elif [ "$1" = "-" ]
then
	tmp=$(($brightness - $step))
	if [ $tmp -ge $min ]
	then
		brightness=$tmp
	fi
fi
echo "$brightness" > "$path/brightness"
